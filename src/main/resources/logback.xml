<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    <springProperty scope="context" name="APP_ENV" source="spring.profiles.active"/>
    <property name="CONSOLE_LOG_PATTERN"
              value="%highlight([%-5level]):%green([${APP_ENV}]):%yellow([%d{yyyy-MM-dd HH:mm:ss.SSS}])[%t]%cyan([%c{1}]):%line- %m %n"/>
    <property name="LOG_PATTERN"
              value="[%-5level][${APP_ENV}][%d{yyyy-MM-dd HH:mm:ss.SSS}][%t][%c{1}]:%L:[%.10(%X{sessionId})][%X{path}] - %m%n"/>

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                ${CONSOLE_LOG_PATTERN}
            </Pattern>
        </layout>
    </appender>

    <root level="${DEBUG_LEVEL:-INFO}">
        <appender-ref ref="Console"/>
    </root>

    <logger name="org.hibernate.SQL" level="info" additivity="false">
        <appender-ref ref="Console"/>
    </logger>
    <logger name="org.hibernate.orm.jdbc.bind" level="info" additivity="false">
        <appender-ref ref="Console"/>
    </logger>
    <logger name="org.hibernate.stat" level="info" additivity="false">
        <appender-ref ref="Console"/>
    </logger>
    <logger name="org.hibernate.SQL_SLOW" level="info" additivity="false">
        <appender-ref ref="Console"/>
    </logger>
    <logger name="org.hibernate.cache" level="info" additivity="false">
        <appender-ref ref="Console"/>
    </logger>

</configuration>

